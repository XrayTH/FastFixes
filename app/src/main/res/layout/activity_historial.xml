<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Historial">

    <!-- BotÃ³n Volver -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/volver"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="146dp"
        android:layout_height="67dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#007BFF"
        android:padding="12dp"
        android:text="Volver"
        android:textColor="#FFFFFF"
        app:cornerRadius="16dp"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/rvPublicaciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#FFFFFF"
        app:strokeColor="#007BFF"
        app:strokeWidth="2dp" />

    <!-- RecyclerView para las publicaciones -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPublicaciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volver" />

</androidx.constraintlayout.widget.ConstraintLayout>


