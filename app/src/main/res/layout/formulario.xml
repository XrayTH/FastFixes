<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Contenedor para los elementos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Vista previa de la imagen seleccionada -->
        <ImageView
            android:id="@+id/ivImagenSeleccionada"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Botón para seleccionar la imagen -->
        <Button
            android:id="@+id/btnSeleccionarImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#007BFF"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

        <!-- Campo para el título -->
        <EditText
            android:id="@+id/etTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:background="@drawable/minimal_input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:textColor="#333333" />

        <!-- Campo para la descripción -->
        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:background="@drawable/minimal_input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine"
            android:textColor="#333333" />

        <!-- Campo para el estado -->
        <EditText
            android:id="@+id/etEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado (pendiente, en proceso, terminado)"
            android:background="@drawable/minimal_input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:textColor="#333333" />

        <!-- Campo para la fecha -->
        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha (YYYY-MM-DD)"
            android:background="@drawable/minimal_input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="date"
            android:textColor="#333333" />

        <!-- Campo para la fecha de finalización -->
        <EditText
            android:id="@+id/etFechaTerminado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha Terminada (YYYY-MM-DD)"
            android:background="@drawable/minimal_input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="date"
            android:textColor="#333333" />

        <!-- Botón para publicar daños -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publicar Daños"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#007BFF"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

        <!-- Botón para ver la publicación -->
        <Button
            android:id="@+id/btnLleveAVerPublicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Publicación"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#DDDDDD"
            android:textColor="#333333"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>
