<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Contenedor para los elementos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Vista previa de la imagen seleccionada -->
        <ImageView
            android:id="@+id/ivImagenSeleccionada"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Botón para seleccionar la imagen -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSeleccionarImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen"
            android:textColor="@color/white"
            app:cornerRadius="16dp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            app:rippleColor="@color/white"
            android:padding="12dp"
            app:backgroundTint="#007BFF"
            app:iconPadding="8dp"
            app:iconTint="@color/white"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginBottom="16dp" />

        <!-- Campo para el título -->
        <EditText
            android:id="@+id/etTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:background="@drawable/minimal_input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:textColor="#333333" />

        <!-- Campo para la descripción -->
        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:background="@drawable/minimal_input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine"
            android:textColor="#333333" />

        <!-- Campo para el lugar -->
        <EditText
            android:id="@+id/editLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/minimal_input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:hint="Lugar"
            android:inputType="text" />

        <!-- Campo para el teléfono -->
        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/minimal_input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:hint="Teléfono"
            android:inputType="text" />

        <!-- Campo para la fecha -->
        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha (YYYY-MM-DD)"
            android:background="@drawable/minimal_input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="date"
            android:textColor="#333333" />

        <!-- Botón para publicar daños -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publicar Daños"
            android:textColor="@color/white"
            app:cornerRadius="16dp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            app:rippleColor="@color/white"
            android:padding="12dp"
            app:backgroundTint="#007BFF"
            app:iconPadding="8dp"
            app:iconTint="@color/white"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginBottom="16dp" />

        <!-- Botón para ver la publicación -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLleveAVerPublicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Publicación"
            android:textColor="#333333"
            app:cornerRadius="16dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            app:rippleColor="@color/black"
            android:padding="12dp"
            app:backgroundTint="#DDDDDD"
            app:iconPadding="8dp"
            app:iconTint="@color/black"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

</ScrollView>

